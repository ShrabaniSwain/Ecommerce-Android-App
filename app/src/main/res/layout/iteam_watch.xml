<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivWatchImage"
        android:layout_width="160dp"
        android:src="@drawable/dresses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:background="#33CCC9C9"
        android:layout_marginTop="10dp"
        android:layout_height="160dp"/>

    <TextView
        android:id="@+id/tvWatchName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivWatchImage"
        android:text="women watches"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:maxLines="2"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/tvWatchPrice"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWatchName"
        android:text="500"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:textSize="18dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>